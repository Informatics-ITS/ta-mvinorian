{
  "editor.tabSize": 2,
  "css.validate": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  "tailwindCSS.classAttributes": ["class", "className", ".*className"],
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "i18n-ally.localesPaths": ["messages", "src/i18n"],
  "i18n-ally.keystyle": "nested"
}
